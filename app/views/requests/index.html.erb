<p id="notice"><%= notice %></p>

<h1>Listing Requests</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Message</th>
      <th>Customer profile</th>
      <th>Worker profile</th>
      <th>Comment</th>
      <th>Rating</th>
      <th>Price</th>
      <th>Work hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.description %></td>
        <td><%= request.message %></td>
        <td><%= request.customer_profile %></td>
        <td><%= request.worker_profile %></td>
        <td><%= request.comment %></td>
        <td><%= request.rating %></td>
        <td><%= request.price %></td>
        <td><%= request.work_hours %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

